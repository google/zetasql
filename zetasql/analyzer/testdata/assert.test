    | +-subquery_type=SCALAR
    | +-subquery=
    |   +-ProjectScan
    |     +-column_list=[$aggregate.$agg1#19]
    |     +-input_scan=
    |       +-AggregateScan
    |         +-column_list=[$aggregate.$agg1#19]
    |         +-input_scan=
    |         | +-TableScan(table=SimpleTypes)
